<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MSFIApp.Components.Controls.Loading"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="This"
    IsVisible="{Binding IsVisibleExternally, Source={x:Reference This}}">

    <Grid>
        
        <VerticalStackLayout VerticalOptions="Center"     
                             BackgroundColor="White"
                             IsVisible="{Binding  TurnonRetry, Source={x:Reference This}}"
                             ZIndex="20">
           
            <Border StrokeShape="RoundRectangle 14" Stroke="Gray"     
                    VerticalOptions="Center"
                    WidthRequest="160" HeightRequest="60">
                
                <Label                 
                    Text="تلاش مجدد"                  
                    TextColor="Black"
                    Opacity="1"
                    HorizontalOptions="Center"
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center"/>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="LinkLabel_Clicked"/>
                </Border.GestureRecognizers>
            </Border>
        </VerticalStackLayout>

        <Image
            x:Name="LoadingIcon"
            Source="{Binding IconSource, Source={x:Reference This}}"
            WidthRequest="{Binding IconSize, Source={x:Reference This}}"
            HeightRequest="{Binding IconSize, Source={x:Reference This}}"
            HorizontalOptions="Center"
            VerticalOptions="Center" />
    </Grid>
</ContentView>

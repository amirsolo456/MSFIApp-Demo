<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MSFIApp.Components.Controls.NumberInput"
             x:Name="numberInput">
    
    <Grid Padding="10" 
          HorizontalOptions="Fill" 
          VerticalOptions="Fill">
        
        <Entry
            x:Name="PhoneEntry"            
            FontFamily="Yekan"
            HeightRequest="60"
            Keyboard="Numeric"
            HorizontalTextAlignment="Center"
            Text="{Binding Text, Source={x:Reference numberInput}, Mode=TwoWay}"
            MaxLength="11"
            Focused="PhoneEntry_Focused"
            Unfocused="PhoneEntry_Unfocused"
            VerticalOptions="Fill"
            FontSize="24"/>

        <BoxView x:Name="Underline"
                 HeightRequest="1"
                 BackgroundColor="Black"
                 HorizontalOptions="FillAndExpand"
                 Margin="0,35,0,0"/>
    </Grid>
</ContentView>

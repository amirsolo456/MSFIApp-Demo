<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MSFIApp.Components.Controls.TittleLabel"
             x:Name="LblRoot">
      
        <Label 
            x:Name="MainLabel"
            FontFamily="IRANSans"
            Text="{Binding Text, Source={x:Reference LblRoot}}"
            TextColor="{Binding TextColor, Source={x:Reference LblRoot}}"
            FontSize="{Binding FontSize, Source={x:Reference LblRoot}}"
            FontAttributes="{Binding FontAttributes, Source={x:Reference LblRoot}}"
            HorizontalOptions="{Binding HorizontalOptions, Source={x:Reference LblRoot}}"
            VerticalOptions="{Binding VerticalOptions, Source={x:Reference LblRoot}}" />
   
</ContentView>

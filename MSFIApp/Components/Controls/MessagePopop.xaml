<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MSFIApp.Components.Controls.MessagePopop"
             x:Name="PopopMessage"
             IsVisible="False"
             BackgroundColor="Transparent">
    
    <Grid Padding="0" 
          RowSpacing="0"
          RowDefinitions="Auto"
          VerticalOptions="Start"
          TranslationY="10">

        <Border x:Name="PopupFrame"
                Grid.Row="0"
               Padding="16"
               StrokeShape="RoundRectangle 10"
               HorizontalOptions="Fill"
               VerticalOptions="Fill"
               BackgroundColor="{Binding BackgroundColor, Source={x:Reference PopopMessage}}">

            <Label x:Name="MessageLabel"
                   Text="{Binding MessageText, Source={x:Reference PopopMessage}}"
                   TextColor="{Binding TextColor, Source={x:Reference PopopMessage}}"
                   FontSize="16"
                   HorizontalOptions="Start"
                   VerticalOptions="Center"/>
        </Border>

    </Grid>
</ContentView>

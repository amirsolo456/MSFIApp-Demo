<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MSFIApp.Components.Controls.HyperlinkLabel"
             x:Name="HyperLinkLabel" >
    <Label 
        Text="{Binding Text, Source={x:Reference HyperLinkLabel}}"
        TextColor="{Binding TextColor, Source={x:Reference HyperLinkLabel}}"
        FontAttributes="{Binding FontAttributes, Source={x:Reference HyperLinkLabel}}"
        FontSize="{Binding FontSize, Source={x:Reference HyperLinkLabel}}"
        FontFamily="IRANSans"
        HorizontalOptions="Start"
        VerticalOptions="Center">

        <Label.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnLabelTapped" NumberOfTapsRequired="1" />
        </Label.GestureRecognizers>

    </Label>
    
</ContentView>

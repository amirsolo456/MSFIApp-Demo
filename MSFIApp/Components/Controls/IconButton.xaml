<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MSFIApp.Components.Controls.IconButton"
             x:Name="iconBtnRoot">

    <Border  
           BackgroundColor="Transparent"
           StrokeShape="RoundRectangle 4,4,4,4"
           Stroke="Transparent">
        
        <HorizontalStackLayout Spacing="8"
                               VerticalOptions="Center"
                               HorizontalOptions="Center">

            <Image Source="{Binding IconSource, Source={x:Reference iconBtnRoot}}"
                   WidthRequest="{Binding ImageSize, Source={x:Reference iconBtnRoot}}" 
                   HeightRequest="{Binding ImageSize, Source={x:Reference iconBtnRoot}}"
                   VerticalOptions="Center" />

            <Label Text="{Binding Text, Source={x:Reference iconBtnRoot}}"
                   FontSize="{Binding FontSize, Source={x:Reference iconBtnRoot}}"
                   VerticalOptions="Center"
                   FontAttributes="{Binding FontAttributes, Source={x:Reference iconBtnRoot}}"
                   TextColor="{Binding TextColor, Source={x:Reference iconBtnRoot}}"/>

        </HorizontalStackLayout>
        <!--<Border.Shadow>
            <Shadow 
               Brush="#00000026"
              
                Radius="8"
                Opacity="0.3" />
        </Border.Shadow>-->
        
        <Border.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnTapped"/>
        </Border.GestureRecognizers>
    </Border>
</ContentView>

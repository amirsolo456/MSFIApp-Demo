<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MSFIApp.Components.Controls.NavigationLabel"
             FlowDirection="RightToLeft"
             xmlns:pages="clr-namespace:MSFIApp.Components.Controls"
             x:Name="NavLinkLabel">
    
    <Grid ColumnDefinitions="*,0" Padding="5,0,5,0">
        <Label 
            CharacterSpacing="0"
            x:DataType="pages:NavigationLabel"
            Text="{Binding Text, Source={x:Reference NavLinkLabel}}"
            TextColor="{Binding TextColor, Source={x:Reference NavLinkLabel}}"
            FontAttributes="{Binding FontAttributes, Source={x:Reference NavLinkLabel}}"
            FontSize="{Binding FontSize, Source={x:Reference NavLinkLabel}}"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="Center">

            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnLabelTapped" NumberOfTapsRequired="1" />
            </Label.GestureRecognizers>

        </Label>

        <Label  TextColor="#007bff"
                VerticalTextAlignment="Center"
                VerticalOptions="Center"
                FontSize="22"
                FontAttributes="Bold"
                Text="←"
                HorizontalOptions="End"/>
    </Grid>

</ContentView>

<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MSFIApp.Components.Controls"
             x:Class="MSFIApp.Components.Objects.MainHeader">

    <Grid ColumnDefinitions="*,*,*"
          VerticalOptions="Center" HorizontalOptions="FillAndExpand">

        <local:IconButton IconSource="morevet.png" 
                          ImageSize="30"
                          HorizontalOptions="Start"
                          Grid.Column="0"
                          Clicked="morevet_Clicked"/>

        <local:IconButton IconSource="logoicon.png"
                          ImageSize="50"
                          HorizontalOptions="Center"
                          Grid.Column="1"
                          Clicked="msflogo_Clicked"/>

        <local:IconButton IconSource="fourevet.png"
                          ImageSize="30"
                          HorizontalOptions="End"
                          Grid.Column="2"
                          Clicked="fourevet_Clicked"/>

    </Grid>
</ContentView>

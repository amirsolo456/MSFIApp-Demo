<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MSFIApp.ViewModels.Public.Favorites"
             xmlns:model="clr-namespace:MSFIApp.Dtos.Public.Favorites"
             xmlns:local="clr-namespace:MSFIApp.Components.Controls"
             x:Class="MSFIApp.Components.Objects.Favorites">
        
    <ContentView.BindingContext>
        <vm:FavoritesViewModel />
    </ContentView.BindingContext>

    <VerticalStackLayout   Spacing="16">

        <Label Text="به چه فعالیت‌هایی علاقه‌مندید؟"
               FontSize="18"
               FontAttributes="Bold"
               TextColor="Black" />
 

      

        <VerticalStackLayout  
                        HorizontalOptions="FillAndExpand"
                        BindableLayout.ItemsSource="{Binding Response}" 
                        x:DataType="vm:FavoritesViewModel"
                        VerticalOptions="FillAndExpand">
            
            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="model:ResponseData">
                    <Grid  VerticalOptions="FillAndExpand"
                           ColumnDefinitions="50,*">
                        
                        <local:CustomCheckBox IsChecked="{Binding IsHave}" Grid.Column="0" />
                        <Label Text="{Binding Title}" VerticalOptions="Center" Grid.Column="1" Margin="8,0,0,0"/>
                    </Grid>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </VerticalStackLayout>

    </VerticalStackLayout>
</ContentView>
